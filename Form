                            <input type="email" id="email-cliente" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="tu@email.com">
                        </div>
                        <div>
                            <label for="fecha-evento" class="block text-sm font-medium text-gray-700 mb-2">Fecha del evento</label>
                            <input type="date" id="fecha-evento" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        <div>
                            <label for="num-invitados" class="block text-sm font-medium text-gray-700 mb-2">N√∫mero de invitados</label>
                            <input type="number" id="num-invitados" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Ej: 50" min="1">
                        </div>
                        <div>
                            <label for="solicitudes-adicionales" class="block text-sm font-medium text-gray-700 mb-2">Solicitudes o comentarios adicionales</label>
                            <textarea id="solicitudes-adicionales" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none" placeholder="Describe cualquier solicitud especial, decoraci√≥n tem√°tica, restricciones alimentarias, m√∫sica preferida, etc."></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resumen de cotizaci√≥n -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-6 sticky top-8">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-6 text-center">üí∞ Resumen de Cotizaci√≥n</h3>
                    
                    <div id="resumen-servicios" class="space-y-3 mb-6">
                        <p class="text-gray-500 text-center italic">Selecciona servicios para ver el resumen</p>
                    </div>
                    
                    <div class="border-t pt-4">
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-lg font-semibold">Total:</span>
                            <span id="total-precio" class="text-2xl font-bold text-purple-600">$0</span>
                        </div>
                        
                        <button id="btn-cotizar" class="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white py-3 px-6 rounded-lg font-semibold hover:from-purple-700 hover:to-pink-700 transition-all duration-300 transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                            üìß Enviar Cotizaci√≥n por Email
                        </button>
                        
                        <button id="btn-whatsapp" class="w-full mt-3 bg-green-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-green-600 transition-all duration-300 transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
                            üí¨ Enviar por WhatsApp
                        </button>
                        
                        <button id="btn-limpiar" class="w-full mt-3 bg-gray-200 text-gray-700 py-2 px-6 rounded-lg font-medium hover:bg-gray-300 transition-colors">
                            Limpiar Selecci√≥n
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let serviciosSeleccionados = {};
        let totalPrecio = 0;

        function actualizarCotizacion() {
            const resumenDiv = document.getElementById('resumen-servicios');
            const totalSpan = document.getElementById('total-precio');
            const btnCotizar = document.getElementById('btn-cotizar');
            const btnWhatsapp = document.getElementById('btn-whatsapp');
            
            // Limpiar resumen
            resumenDiv.innerHTML = '';
            totalPrecio = 0;
            serviciosSeleccionados = {};
            
            // Obtener todos los inputs seleccionados
            const inputsSeleccionados = document.querySelectorAll('input[type="radio"]:checked, input[type="checkbox"]:checked');
            
            if (inputsSeleccionados.length === 0) {
                resumenDiv.innerHTML = '<p class="text-gray-500 text-center italic">Selecciona servicios para ver el resumen</p>';
                btnCotizar.disabled = true;
                btnWhatsapp.disabled = true;
            } else {
                btnCotizar.disabled = false;
                btnWhatsapp.disabled = false;
                
                inputsSeleccionados.forEach(input => {
                    const precio = parseInt(input.dataset.price);
                    const nombre = input.parentElement.querySelector('.font-medium').textContent;
                    const categoria = input.name;
                    
                    if (!serviciosSeleccionados[categoria]) {
                        serviciosSeleccionados[categoria] = [];
                    }
                    
                    serviciosSeleccionados[categoria].push({
                        nombre: nombre,
                        precio: precio
                    });
                    
                    totalPrecio += precio;
                    
                    // Agregar al resumen
                    const servicioDiv = document.createElement('div');
                    servicioDiv.className = 'flex justify-between items-center py-2 border-b border-gray-100';
                    servicioDiv.innerHTML = `
                        <span class="text-sm text-gray-700">${nombre}</span>
                        <span class="font-semibold text-purple-600">$${precio.toLocaleString()}</span>
                    `;
                    resumenDiv.appendChild(servicioDiv);
                });
            }
            
            // Actualizar total
            totalSpan.textContent = `$${totalPrecio.toLocaleString()}`;
        }

        function limpiarSeleccion() {
            // Desmarcar todos los inputs
            document.querySelectorAll('input[type="radio"], input[type="checkbox"]').forEach(input => {
                input.checked = false;
            });
            
            // Actualizar cotizaci√≥n
            actualizarCotizacion();
        }

        function obtenerDatosCliente() {
            return {
                nombre: document.getElementById('nombre-cliente').value || 'No especificado',
                telefono: document.getElementById('telefono-cliente').value || 'No especificado',
                email: document.getElementById('email-cliente').value || 'No especificado',
                fecha: document.getElementById('fecha-evento').value || 'No especificada',
                invitados: document.getElementById('num-invitados').value || 'No especificado',
                solicitudes: document.getElementById('solicitudes-adicionales').value || 'Ninguna'
            };
        }

        function generarMensajeCotizacion() {
            const cliente = obtenerDatosCliente();
            
            let mensaje = 'üéâ COTIZACI√ìN DE EVENTO üéâ\n\n';
            mensaje += 'üë§ DATOS DEL CLIENTE:\n';
            mensaje += `‚Ä¢ Nombre: ${cliente.nombre}\n`;
            mensaje += `‚Ä¢ Tel√©fono: ${cliente.telefono}\n`;
            mensaje += `‚Ä¢ Email: ${cliente.email}\n`;
            mensaje += `‚Ä¢ Fecha del evento: ${cliente.fecha}\n`;
            mensaje += `‚Ä¢ N√∫mero de invitados: ${cliente.invitados}\n\n`;
            
            mensaje += 'üìã SERVICIOS SELECCIONADOS:\n\n';
            
            for (const [categoria, servicios] of Object.entries(serviciosSeleccionados)) {
                mensaje += `${categoria.toUpperCase()}:\n`;
                servicios.forEach(servicio => {
                    mensaje += `   ‚Ä¢ ${servicio.nombre} - $${servicio.precio.toLocaleString()}\n`;
                });
                mensaje += '\n';
            }
            
            mensaje += `üí∞ TOTAL: $${totalPrecio.toLocaleString()}\n\n`;
            mensaje += `üìù SOLICITUDES ADICIONALES:\n${cliente.solicitudes}\n\n`;
            mensaje += '¬°Gracias por tu inter√©s! Te contactaremos pronto para confirmar los detalles.';
            
            return mensaje;
        }

        function enviarPorEmail() {
            if (Object.keys(serviciosSeleccionados).length === 0) {
                alert('Por favor selecciona al menos un servicio');
                return;
            }
            
            const mensaje = generarMensajeCotizacion();
            const cliente = obtenerDatosCliente();
            
            const subject = encodeURIComponent(`Cotizaci√≥n de Evento - ${cliente.nombre}`);
            const body = encodeURIComponent(mensaje);
            
            const mailtoLink = `mailto:yasser26ah@gmail.com?subject=${subject}&body=${body}`;
            
            window.open(mailtoLink, '_blank');
            
            alert('Se abrir√° tu cliente de correo para enviar la cotizaci√≥n. Si no se abre autom√°ticamente, copia y pega la informaci√≥n manualmente.');
        }

        function enviarPorWhatsApp() {
            if (Object.keys(serviciosSeleccionados).length === 0) {
                alert('Por favor selecciona al menos un servicio');
                return;
            }
            
            const mensaje = generarMensajeCotizacion();
            const mensajeCodificado = encodeURIComponent(mensaje);
            
            const whatsappLink = `https://wa.me/573013350490?text=${mensajeCodificado}`;
            
            window.open(whatsappLink, '_blank');
        }

        // Event listeners
        document.addEventListener('change', actualizarCotizacion);
        document.getElementById('btn-limpiar').addEventListener('click', limpiarSeleccion);
        document.getElementById('btn-cotizar').addEventListener('click', enviarPorEmail);
        document.getElementById('btn-whatsapp').addEventListener('click', enviarPorWhatsApp);

        // Inicializar
        actualizarCotizacion();
    </script>
